@model IEnumerable<MVC5HW1.Models.SP_GetAllCustomerStatistics_Result>

@{
    ViewBag.Title = "客戶統計資料";
}

<h2>客戶統計資料</h2>

<table class="table">
    <tr>
        <th>
            客戶名稱
        </th>
        <th>
           聯絡人數
        </th>
        <th>
           銀行帳戶數
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountCount)
            </td>
        </tr>
    }

</table>

